/dts-v1/;
#include "suniv-f1c100s.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/interrupt-controller/arm-gic.h>

/ {
	model = "Tiny SBC using allwinner FC100/200 series";
	compatible = "licheepi,licheepi-nano", "allwinner,suniv-f1c100s",
		     "allwinner,suniv";

	aliases {
		serial0 = &uart0;
		spi0 = &spi0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	leds {
		compatible = "gpio-leds";
		// pinctrl-names = "default";
		// pinctrl-0 = <&led_pins>;

		heartbeat {
			label = "Heartbeat";
			gpios = <&pio 4 10 GPIO_ACTIVE_LOW>;	// PE10
			default-state = "on";
			linux,default-trigger = "heartbeat";
		};

		activity {
			label = "activity";
			gpios = <&pio 4 6 GPIO_ACTIVE_LOW>;	// PE6
			default-state = "on";
			linux,default-trigger = "activity";
		};
	};

	pcm5102a: pcm5102a {
		#sound-dai-cells = <0>;
		compatible = "ti,pcm5102a";
		status = "okay";
	};
/*
	max98357a: max98357a {
		#sound-dai-cells = <0>;
		compatible = "maxim,max98357a";
		status = "okay";
	};

	dummy_codec: dummy_codec {
		compatible = "asoc,snd-soc-dummy";
		#sound-dai-cells = <0>;
		status = "okay";
	};
*/

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "PCM5102A I2S Master";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&cpu_dai_master>;
		simple-audio-card,frame-master = <&cpu_dai_master>;
		simple-audio-card,mclk-fs = <256>;
		//simple-audio-card,widgets = "Speaker", "External Speaker";
 
		cpu_dai_master: simple-audio-card,cpu {
			sound-dai = <&i2s0>;
		};

		dailink0_master: simple-audio-card,codec {
			sound-dai = <&pcm5102a>;
		};
	};
	
};


&spi0 {
    pinctrl-names = "default";
    pinctrl-0 = <&spi0_pins_a>;
    status = "okay";


	flash: en25qh64@0 {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible =  "eon,en25qh64", "jedec,spi-nor";
        reg = <0>;
        spi-max-frequency = <50000000>;
        partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x100000>;
				read-only;
			};

			partition@100000 {
				label = "dtb";
				reg = <0x100000 0x10000>;
				read-only;
			};

			partition@110000 {
				label = "kernel";
				reg = <0x110000 0x360000>;
				read-only;
			};

			partition@510000 {
				label = "rootfs";
				reg = <0x470000 0x390000>;
			};
		};
    };
};


&mmc0 {

	status = "disabled";
};

&otg_sram {
	status = "disabled";
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pe_pins>;
	status = "okay";
};

&usb_otg {
	dr_mode = "peripheral";
	status = "disabled";
};

&usbphy {
	usb0_id_det = <&pio 4 2 GPIO_ACTIVE_HIGH>; /* PE2 */
	status = "disabled";
};

&cir {
	//pinctrl-names = "default";
	//pinctrl-0 = <&ir_pin>;
	status = "disabled";
};

&i2c2 {
	//pinctrl-names = "default";
	//pinctrl-0 = <&i2c2_pd_pins>;
	status = "disabled";
};

&i2s0 {
	status = "okay";
};


&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM",
		"LINEIN", "Line In",
		"FMINL", "Left FM In",
		"FMINR", "Right FM In",
		"MIC", "Mic";
	status = "okay";
};

#!/bin/ash

echo "Start CSpot (Spotify Connect)"

APPNAME=cspotcli
SPOTIFY_ADDR=apresolve.spotify.com

# check connection first
echo "Wait established connection"
until ping apresolve.spotify.com -c 1 | grep ttl
do
    sleep .5
    #echo "Wait established connection"
done

cspotcli -d "plughw:1,2" -n polytron_spotify_connect > /dev/null 2&>1 &

if [ $? -ne 0 ]; then
    echo "Cannot start $APPNAME"
else
    echo "$APPNAME start successfully"
fi


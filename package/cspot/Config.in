config BR2_PACKAGE_CSPOT
	bool "Cspot"
	depends on BR2_USE_MMU # avahi
	depends on !BR2_STATIC_LIBS # avahi
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_INSTALL_LIBSTDCPP
	select BR2_PACKAGE_AVAHI
	select BR2_PACKAGE_AVAHI_DAEMON
	select BR2_PACKAGE_ALSA_LIB

	help
	  A Spotify Connect player written in CPP targeting
	  
	  https://github.com/feelfreelinux/cspot

if BR2_PACKAGE_CSPOT
	config BR2_PACKAGE_CSPOT_ALSA
	bool "alsa_audio"
	default y
	help
		Set audio output to ALSA
endif

comment "A Spotify Connect player written in CPP targeting, but not limited to embedded devices (ESP32)."
	depends on BR2_USE_MMU
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_HAS_THREADS \
		|| BR2_STATIC_LIBS
